{
  "name": "bhim-shahi-portfolio",
  "version": "1.0.0",
  "description": "Interactive portfolio website for Bhim Shahi Thakuri",
  "main": "server/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "esbuild server/index.ts --bundle --platform=node --target=node16 --outfile=dist/server.js",
    "start": "node dist/server.js",
    "preview": "npm run build && npm run start"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "drizzle-orm": "^0.29.0",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "tsx": "^4.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "typescript": "^5.3.0",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=16"
  }
}

